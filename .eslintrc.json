{
  "extends": ["plugin:prettier/recommended"],
  "plugins": ["react", "prettier"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }],
    "css.lint.unknownAtRules": "ignore"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
